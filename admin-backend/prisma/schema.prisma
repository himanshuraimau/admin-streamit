generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                    String               @id
  name                  String
  email                 String               @unique
  emailVerified         Boolean              @default(false)
  image                 String?
  createdAt             DateTime             @default(now())
  updatedAt             DateTime             @default(now()) @updatedAt
  age                   Int?
  phone                 String?
  username              String               @unique
  bio                   String?
  adminNotes            String?
  isSuspended           Boolean              @default(false)
  lastLoginAt           DateTime?
  lastLoginIp           String?
  role                  UserRole             @default(USER)
  suspendedAt           DateTime?
  suspendedBy           String?
  suspendedReason       String?
  suspensionExpiresAt   DateTime?
  accounts              Account[]
  adminActionsPerformed AdminActivityLog[]   @relation("AdminUser")
  adminActionsReceived  AdminActivityLog[]   @relation("AffectedUser")
  blockedBy             Block[]              @relation("BlockedBy")
  blocking              Block[]              @relation("Blocking")
  coinPurchases         CoinPurchase[]
  coinWallet            CoinWallet?
  comments              Comment[]
  commentLikes          CommentLike[]
  creatorApplication    CreatorApplication?
  ownedDiscountCodes    DiscountCode[]       @relation("OwnedDiscountCodes")
  discountRedemptions   DiscountRedemption[]
  following             Follow[]             @relation("Following")
  followedBy            Follow[]             @relation("FollowedBy")
  giftsReceived         GiftTransaction[]    @relation("GiftsReceived")
  giftsSent             GiftTransaction[]    @relation("GiftsSent")
  likes                 Like[]
  posts                 Post[]
  postViews             PostView[]
  reportsReceived       Report[]             @relation("ReportedUser")
  reportsSubmitted      Report[]             @relation("ReportSubmitter")
  sessions              Session[]
  stream                Stream?

  @@index([role])
  @@index([isSuspended])
  @@index([email])
  @@index([username])
  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  username  String?
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  @@map("verification")
}

model CreatorApplication {
  id              String                @id @default(cuid())
  userId          String                @unique
  status          ApplicationStatus     @default(DRAFT)
  submittedAt     DateTime?
  reviewedAt      DateTime?
  reviewedBy      String?
  rejectionReason String?
  createdAt       DateTime              @default(now())
  updatedAt       DateTime              @updatedAt
  user            User                  @relation(fields: [userId], references: [id], onDelete: Cascade)
  profile         CreatorProfile?
  financial       FinancialDetails?
  identity        IdentityVerification?

  @@map("creator_application")
}

model IdentityVerification {
  id                   String             @id @default(cuid())
  creatorApplicationId String             @unique
  idType               IDType
  idDocumentUrl        String
  selfiePhotoUrl       String
  isVerified           Boolean            @default(false)
  verifiedAt           DateTime?
  verifiedBy           String?
  createdAt            DateTime           @default(now())
  updatedAt            DateTime           @updatedAt
  creatorApplication   CreatorApplication @relation(fields: [creatorApplicationId], references: [id], onDelete: Cascade)

  @@map("identity_verification")
}

model FinancialDetails {
  id                   String             @id @default(cuid())
  creatorApplicationId String             @unique
  accountHolderName    String
  accountNumber        String
  ifscCode             String
  panNumber            String
  isVerified           Boolean            @default(false)
  verifiedAt           DateTime?
  verifiedBy           String?
  createdAt            DateTime           @default(now())
  updatedAt            DateTime           @updatedAt
  creatorApplication   CreatorApplication @relation(fields: [creatorApplicationId], references: [id], onDelete: Cascade)

  @@map("financial_details")
}

model CreatorProfile {
  id                   String             @id @default(cuid())
  creatorApplicationId String             @unique
  profilePictureUrl    String
  bio                  String
  categories           ContentCategory[]
  createdAt            DateTime           @default(now())
  updatedAt            DateTime           @updatedAt
  creatorApplication   CreatorApplication @relation(fields: [creatorApplicationId], references: [id], onDelete: Cascade)

  @@map("creator_profile")
}

model FileUpload {
  id           String      @id @default(cuid())
  fileName     String
  originalName String
  mimeType     String
  size         Int
  url          String
  uploadedBy   String
  purpose      FilePurpose
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  @@map("file_upload")
}

model Stream {
  id                  String            @id @default(cuid())
  title               String
  thumbnail           String?
  isLive              Boolean           @default(false)
  isChatEnabled       Boolean           @default(true)
  isChatDelayed       Boolean           @default(false)
  isChatFollowersOnly Boolean           @default(false)
  userId              String            @unique
  createdAt           DateTime          @default(now())
  updatedAt           DateTime          @updatedAt
  description         String?
  giftTransactions    GiftTransaction[]
  user                User              @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([title])
  @@index([isLive])
  @@map("stream")
}

model Follow {
  id          String   @id @default(cuid())
  followerId  String
  followingId String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  follower    User     @relation("Following", fields: [followerId], references: [id], onDelete: Cascade)
  following   User     @relation("FollowedBy", fields: [followingId], references: [id], onDelete: Cascade)

  @@unique([followerId, followingId])
  @@index([followerId])
  @@index([followingId])
  @@map("follow")
}

model Block {
  id        String   @id @default(cuid())
  blockerId String
  blockedId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  blocked   User     @relation("BlockedBy", fields: [blockedId], references: [id], onDelete: Cascade)
  blocker   User     @relation("Blocking", fields: [blockerId], references: [id], onDelete: Cascade)

  @@unique([blockerId, blockedId])
  @@index([blockerId])
  @@index([blockedId])
  @@map("block")
}

model Post {
  id            String      @id @default(cuid())
  content       String?
  type          PostType    @default(TEXT)
  likesCount    Int         @default(0)
  commentsCount Int         @default(0)
  isPublic      Boolean     @default(true)
  allowComments Boolean     @default(true)
  authorId      String
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  flagCount     Int         @default(0)
  hiddenAt      DateTime?
  hiddenBy      String?
  hiddenReason  String?
  isFlagged     Boolean     @default(false)
  isHidden      Boolean     @default(false)
  sharesCount   Int         @default(0)
  viewsCount    Int         @default(0)
  isShort       Boolean     @default(false)
  comments      Comment[]
  likes         Like[]
  author        User        @relation(fields: [authorId], references: [id], onDelete: Cascade)
  media         PostMedia[]
  views         PostView[]
  reports       Report[]

  @@index([authorId])
  @@index([createdAt])
  @@index([type])
  @@index([isPublic])
  @@index([isHidden])
  @@index([isFlagged])
  @@index([isShort, createdAt])
  @@index([isShort, type, isPublic])
  @@index([isShort, viewsCount, likesCount])
  @@index([createdAt, likesCount, commentsCount, viewsCount, sharesCount])
  @@map("post")
}

model PostMedia {
  id           String    @id @default(cuid())
  url          String
  type         MediaType
  mimeType     String
  size         Int?
  width        Int?
  height       Int?
  duration     Int?
  thumbnailUrl String?
  postId       String
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  post         Post      @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@index([postId])
  @@index([type])
  @@map("post_media")
}

model PostView {
  id       String   @id @default(cuid())
  postId   String
  userId   String?
  viewedAt DateTime @default(now())
  post     Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  user     User?    @relation(fields: [userId], references: [id])

  @@index([postId])
  @@index([userId])
  @@index([viewedAt])
  @@map("post_view")
}

model Like {
  id        String   @id @default(cuid())
  userId    String
  postId    String
  createdAt DateTime @default(now())
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, postId])
  @@index([userId])
  @@index([postId])
  @@index([createdAt])
  @@map("like")
}

model Comment {
  id           String        @id @default(cuid())
  content      String
  userId       String
  postId       String
  parentId     String?
  likesCount   Int           @default(0)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  hiddenAt     DateTime?
  hiddenBy     String?
  hiddenReason String?
  isHidden     Boolean       @default(false)
  parent       Comment?      @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies      Comment[]     @relation("CommentReplies")
  post         Post          @relation(fields: [postId], references: [id], onDelete: Cascade)
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  likes        CommentLike[]
  reports      Report[]

  @@index([userId])
  @@index([postId])
  @@index([parentId])
  @@index([createdAt])
  @@index([isHidden])
  @@map("comment")
}

model CommentLike {
  id        String   @id @default(cuid())
  userId    String
  commentId String
  createdAt DateTime @default(now())
  comment   Comment  @relation(fields: [commentId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, commentId])
  @@index([userId])
  @@index([commentId])
  @@map("comment_like")
}

model CoinWallet {
  id          String   @id @default(cuid())
  userId      String   @unique
  balance     Int      @default(0)
  totalEarned Int      @default(0)
  totalSpent  Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("coin_wallet")
}

model CoinPackage {
  id          String         @id @default(cuid())
  name        String
  coins       Int
  price       Int
  currency    String         @default("INR")
  bonusCoins  Int            @default(0)
  isActive    Boolean        @default(true)
  description String?
  sortOrder   Int            @default(0)
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  purchases   CoinPurchase[]

  @@index([isActive, sortOrder])
  @@map("coin_package")
}

model CoinPurchase {
  id                 String              @id @default(cuid())
  userId             String
  packageId          String
  coins              Int
  bonusCoins         Int                 @default(0)
  totalCoins         Int
  amount             Int
  currency           String              @default("INR")
  paymentGateway     String?             @default("dodo")
  transactionId      String?             @unique
  orderId            String              @unique
  status             PurchaseStatus      @default(PENDING)
  failureReason      String?
  paymentData        Json?
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  discountBonusCoins Int                 @default(0)
  discountCodeId     String?
  package            CoinPackage         @relation(fields: [packageId], references: [id])
  user               User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  discountRedemption DiscountRedemption?

  @@index([userId, status])
  @@index([status, createdAt])
  @@index([transactionId])
  @@map("coin_purchase")
}

model Gift {
  id           String            @id @default(cuid())
  name         String
  description  String?
  coinPrice    Int
  imageUrl     String
  animationUrl String?
  isActive     Boolean           @default(true)
  sortOrder    Int               @default(0)
  createdAt    DateTime          @default(now())
  updatedAt    DateTime          @updatedAt
  giftsSent    GiftTransaction[]

  @@index([isActive, sortOrder])
  @@map("gift")
}

model GiftTransaction {
  id         String   @id @default(cuid())
  senderId   String
  receiverId String
  giftId     String
  coinAmount Int
  quantity   Int      @default(1)
  streamId   String?
  message    String?
  createdAt  DateTime @default(now())
  gift       Gift     @relation(fields: [giftId], references: [id])
  receiver   User     @relation("GiftsReceived", fields: [receiverId], references: [id], onDelete: Cascade)
  sender     User     @relation("GiftsSent", fields: [senderId], references: [id], onDelete: Cascade)
  stream     Stream?  @relation(fields: [streamId], references: [id])

  @@index([senderId])
  @@index([receiverId])
  @@index([streamId, createdAt])
  @@index([createdAt])
  @@map("gift_transaction")
}

model DiscountCode {
  id                 String               @id @default(cuid())
  code               String               @unique
  discountType       DiscountType
  discountValue      Int
  codeType           CodeType
  createdBy          String?
  ownerId            String?
  maxRedemptions     Int?
  currentRedemptions Int                  @default(0)
  isOneTimeUse       Boolean              @default(true)
  minPurchaseAmount  Int?
  expiresAt          DateTime?
  isActive           Boolean              @default(true)
  description        String?
  createdAt          DateTime             @default(now())
  updatedAt          DateTime             @updatedAt
  owner              User?                @relation("OwnedDiscountCodes", fields: [ownerId], references: [id])
  redemptions        DiscountRedemption[]

  @@index([code])
  @@index([ownerId])
  @@index([codeType, isActive])
  @@map("discount_code")
}

model Report {
  id             String       @id @default(cuid())
  reason         ReportReason
  description    String?
  reporterId     String
  reportedUserId String
  postId         String?
  commentId      String?
  streamId       String?
  status         ReportStatus @default(PENDING)
  reviewedBy     String?
  reviewedAt     DateTime?
  resolution     String?
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  comment        Comment?     @relation(fields: [commentId], references: [id])
  post           Post?        @relation(fields: [postId], references: [id])
  reportedUser   User         @relation("ReportedUser", fields: [reportedUserId], references: [id], onDelete: Cascade)
  reporter       User         @relation("ReportSubmitter", fields: [reporterId], references: [id], onDelete: Cascade)

  @@index([reporterId])
  @@index([reportedUserId])
  @@index([status])
  @@index([createdAt])
  @@index([postId])
  @@index([commentId])
  @@map("report")
}

model AdminActivityLog {
  id             String      @id @default(cuid())
  adminId        String
  action         AdminAction
  targetType     String
  targetId       String
  description    String
  affectedUserId String?
  metadata       Json?
  ipAddress      String?
  createdAt      DateTime    @default(now())
  admin          User        @relation("AdminUser", fields: [adminId], references: [id], onDelete: Cascade)
  affectedUser   User?       @relation("AffectedUser", fields: [affectedUserId], references: [id])

  @@index([adminId])
  @@index([affectedUserId])
  @@index([action])
  @@index([targetType, targetId])
  @@index([createdAt])
  @@map("admin_activity_log")
}

model SystemSetting {
  id          String   @id @default(cuid())
  key         String   @unique
  value       String
  description String?
  isPublic    Boolean  @default(false)
  updatedBy   String
  updatedAt   DateTime @updatedAt
  createdAt   DateTime @default(now())

  @@index([key])
  @@index([isPublic])
  @@map("system_setting")
}

model Announcement {
  id         String           @id @default(cuid())
  title      String
  content    String
  type       AnnouncementType @default(INFO)
  isActive   Boolean          @default(true)
  startsAt   DateTime?
  endsAt     DateTime?
  targetRole UserRole?
  isPinned   Boolean          @default(false)
  createdBy  String
  createdAt  DateTime         @default(now())
  updatedAt  DateTime         @updatedAt

  @@index([isActive, startsAt, endsAt])
  @@index([type])
  @@index([isPinned])
  @@map("announcement")
}

model DiscountRedemption {
  id                String       @id @default(cuid())
  discountCodeId    String
  userId            String
  purchaseId        String       @unique
  bonusCoinsAwarded Int
  createdAt         DateTime     @default(now())
  discountCode      DiscountCode @relation(fields: [discountCodeId], references: [id])
  purchase          CoinPurchase @relation(fields: [purchaseId], references: [id])
  user              User         @relation(fields: [userId], references: [id])

  @@index([discountCodeId])
  @@index([userId])
  @@map("discount_redemption")
}

enum ApplicationStatus {
  DRAFT
  PENDING
  UNDER_REVIEW
  APPROVED
  REJECTED
}

enum IDType {
  AADHAAR
  PASSPORT
  DRIVERS_LICENSE
}

enum ContentCategory {
  EDUCATION
  ENTERTAINMENT
  LIFESTYLE
  GAMING
  MUSIC
  SPORTS
  TECHNOLOGY
  COOKING
  ART
  FITNESS
}

enum FilePurpose {
  ID_DOCUMENT
  SELFIE_PHOTO
  PROFILE_PICTURE
  OTHER
  STREAM_THUMBNAIL
  STREAM_OVERLAY
  POST_MEDIA
  AVATAR
}

enum PostType {
  TEXT
  IMAGE
  VIDEO
  MIXED
}

enum MediaType {
  IMAGE
  VIDEO
  GIF
}

enum PurchaseStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

enum DiscountType {
  PERCENTAGE
  FIXED
}

enum CodeType {
  PROMOTIONAL
  REWARD
}

enum UserRole {
  USER
  CREATOR
  ADMIN
  SUPER_ADMIN
}

enum ReportReason {
  SPAM
  HARASSMENT
  HATE_SPEECH
  NUDITY
  VIOLENCE
  COPYRIGHT
  MISINFORMATION
  SELF_HARM
  OTHER
}

enum ReportStatus {
  PENDING
  UNDER_REVIEW
  RESOLVED
  DISMISSED
}

enum AdminAction {
  USER_SUSPENDED
  USER_UNSUSPENDED
  USER_ROLE_CHANGED
  USER_DELETED
  USER_UPDATED
  POST_HIDDEN
  POST_UNHIDDEN
  POST_DELETED
  COMMENT_HIDDEN
  COMMENT_UNHIDDEN
  COMMENT_DELETED
  CREATOR_APPLICATION_APPROVED
  CREATOR_APPLICATION_REJECTED
  CREATOR_STATUS_REVOKED
  PAYMENT_REFUNDED
  PAYMENT_VERIFIED
  DISCOUNT_CODE_CREATED
  DISCOUNT_CODE_DEACTIVATED
  REPORT_REVIEWED
  REPORT_DISMISSED
  SETTING_UPDATED
  ANNOUNCEMENT_CREATED
  ANNOUNCEMENT_UPDATED
  ANNOUNCEMENT_DELETED
}

enum AnnouncementType {
  INFO
  WARNING
  MAINTENANCE
  FEATURE
  PROMOTION
}
