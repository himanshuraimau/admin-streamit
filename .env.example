# Docker Compose Environment Variables
# Copy this file to .env and update with your values

# ============================================
# DATABASE CONFIGURATION (Neon PostgreSQL)
# ============================================
# Get this from your Neon dashboard: https://neon.tech
DATABASE_URL=postgresql://user:password@ep-xxx-xxx.us-east-2.aws.neon.tech/streamit?sslmode=require

# ============================================
# BACKEND CONFIGURATION
# ============================================
BACKEND_PORT=4000
NODE_ENV=production

# JWT Secret (REQUIRED - generate with: openssl rand -base64 32)
JWT_SECRET=your-super-secret-jwt-key-min-32-characters

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3001,http://localhost:80
ADMIN_FRONTEND_URL=http://localhost:80

# ============================================
# FRONTEND CONFIGURATION
# ============================================
FRONTEND_PORT=80

# API URL (where frontend connects to backend)
VITE_API_URL=http://localhost:4000

